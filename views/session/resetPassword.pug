extends ../layout 

block content
    section#nuevoUsuario.page-section
        .container-fluid.bg-white
            .row
                .col-md-6.padding-70
                    .row
                        .col-md-9.margin-auto
                            if info && info.message
                                .alert.alert-danger.font-montserrat
                                    = info.message
                            h4.section-heading.text-uppercase.margin-bottom REESTABLECIMIENTO DE CONTRASEÑA
                            p.font-montserrat Ingresá tu nueva contraseña:
                            form#nuevoUsuarioForm(action='/resetpassword' method='post')
                                input#email(type='hidden' name='email' value= usuario.email)
                                .row.align-items-stretch
                                    .col-md-12
                                        .form-group
                                            input.form-control(type='password' placeholder='Contraseña *' name='password' class=errors.password ? 'is-invalid' : '')
                                            if errors.password
                                                small#passwordHelp.text-danger.font-montserrat
                                                    = errors.password.message
                                        .form-group
                                            input.form-control(type='password' placeholder='Confirmar contraseña *' name='confirm_password' class=errors.confirm_password ? 'is-invalid' : '')
                                            if errors.confirm_password
                                                small#confirm_passwordHelp.text-danger
                                                    = errors.confirm_password.message
                                .text-center
                                    #success
                                    button.btn.btn-primary.btn-xl.text-uppercase(type='submit') LOG IN
                .col-md-6.bg-pattern